{
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": false,
    "include": [
      "src/",
      "public/",
      "buttons/",
      "cards/",
      "heading/",
      "html/",
      "landmarks/",
      "layouts/",
      "navigation/",
      "sectioning/",
      "types.ts",
      "utilities/",
      "widgets/"
    ]
  },
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}