---
import type { HTMLAttributes } from "astro/types";

import generateShortId from "../../../utilities/generateShortId/index.ts";
import mapAttributes from "../../../utilities/mapAttributes/index.ts";

export type Props = HTMLAttributes<"input"> & {
  labelledBy?: string | undefined;
};

const {
  autocorrect: _autocorrect,
  id = generateShortId(),
  inputmode = "email",
  labelledBy,
  placeholder: _placeholder,
  type: _type,
  ...props
} = Astro.props;

const attrs = mapAttributes(props, ["email-input"]);
---

<input aria-labelledby={labelledBy} {...attrs} {id} {inputmode} type="email" />
