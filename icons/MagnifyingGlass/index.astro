---
import type { HTMLAttributes } from "astro/types";

export type Props = HTMLAttributes<"svg"> & {
  bgnd?: string | undefined;
  fgnd?: string | undefined;
};

const {
  bgnd = "black",
  fgnd = "white",
  height = 48,
  width = 48,
  ...props
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  {height}
  viewBox="0 0 240 240"
  {width}
  {...props}
>
  <circle cx="120" cy="120" r="120" fill={bgnd}></circle>
  <line
    x1="144"
    x2="176"
    y1="144"
    y2="176"
    stroke={fgnd}
    stroke-width="20"
    stroke-linecap="round"></line>
  <circle cx="108" cy="108" r="42" fill="none" stroke={fgnd} stroke-width="20"
  ></circle>
</svg>
